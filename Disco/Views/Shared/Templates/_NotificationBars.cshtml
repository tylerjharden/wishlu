<!-- Error Message Bar -->
@if (ViewBag.ErrorMessage != null)
{
    <script>
        $(document).ready(function () {
            setTimeout(function () { swal("Uh oh...", "@ViewBag.ErrorMessage", "error") }, 50);
        });
    </script>
}
@if (TempData["ErrorMessage"] != null)
{
    <script>
        $(document).ready(function () {
            setTimeout(function () { swal("Uh oh...", '@(TempData["ErrorMessage"])', "error") }, 50);
        });
    </script>
}
