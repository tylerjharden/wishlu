@using Disco.Common
@{
    Layout = "~/Views/Shared/Templates/MainLayout.cshtml";    
}

@section title {
    <span style="font-size: 22pt; padding-right: 2px;">home</span>
    <span class="icon-angle-right" style="padding-right: 2px;"></span>
    <span style="font-size: 28pt;">chat</span>
}

@section styles {
<link rel="stylesheet" type="text/css" href="/Content/jqdialog.css" />

<style>
    /* CHAT */

    .chatbox {
        text-align: left;
        position: fixed;
        bottom: 80px;
        right: 10px;
        width: 240px;
        height: 300px;
        font-family: 'Open Sans', sans-serif;
        background-color: #fff;
        border: 1px solid #ccc;
        font-size: 12px;
    }

        /* CHAT PARTNER NAME */
        .chatbox .header {
            height: 25px;
            line-height: 25px;
            background-color: #ff9009;
            color: #fff;
            font-weight: bold;
            width: 100%;
            float: left;
            font-size: 12px;
        }

            .chatbox .header p {
                margin: 0;
                padding: 0;
                border: 0;
                outline: 0;
                float: left;
                padding-left: 8px;
                vertical-align: baseline;
            }

            .chatbox .header a {
                float: right;
                text-decoration: none;
                color: #fff;
                display: block;
                margin-right: 4px;
                padding-left: 4px;
                padding-right: 4px;
            }

                .chatbox .header a:hover {
                    color: #000;
                }

        /* CHAT AREA WHERE TEXT APPEARS */
        .chatbox .chat_area {
            float: left;
            clear: left;
            width: 100%;
            height: 180px;
            margin-top: 5px;
            margin-bottom: 5px;
            overflow: auto;
        }

        .chatbox .chat_info {
            width: 100%;
            float: left;
            clear: left;
            height: 20px;
            line-height: 20px;
        }

            .chatbox .chat_info p {
                margin: 0;
                padding: 0;
                border: 0;
                outline: 0;
                padding-left: 8px;
                float: left;
                color: #aaa;
                font-style: italic;
                vertical-align: baseline;
            }

        .chatbox .chat_area p {
            padding-left: 8px;
            padding-right: 8px;
            font-size: 12px;
            line-height: 22px;
            float: left;
            clear: left;
            word-wrap: break-word;
            max-width: 176px;
            margin: 0px;
        }



        /* CHAT MESSAGE BOX */
        .chatbox .chat_message {
            width: 100%;
            height: 55px;
            float: left;
            clear: left;
        }

            .chatbox .chat_message textarea {
                border: 1px solid #ddd;
                width: 225px;
                height: 53px;
                float: left;
                margin-left: 5px;
                padding-top: 2px;
                padding-left: 2px;
                padding-right: 2px;
            }

                .chatbox .chat_message textarea:hover {
                    border: 1px solid #ff9009;
                }

        .chatbox a.maximize_chatbox {
            display: none;
        }


        .chatbox .chat_area .error {
            color: #c30000;
            font-style: italic;
        }

        .chatbox .chat_area .me {
            color: #ff9009;
            font-style: italic;
        }

        .chatbox .chat_area .system {
            color: #aaa;
            font-style: italic;
            font-size: 11px;
        }
</style>
}

@section scripts {
<script type="text/javascript" src="/Scripts/jqdialog.min.js"></script>
<script type="text/javascript" src="/Scripts/jquery.autosize.min.js"></script>
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('form.validate').each(function () {
            $(this).validate();
            $(this).on("submit", function () {
                if ($(this).valid()) {
                    form.submit();
                }
                return false;
            });
        });        
    });
</script>

<script src="/Scripts/jquery.signalR-2.1.2.min.js"></script>
<script src="~/signalr/hubs"></script>

<script>
    $(document).ready(function () {
        $("body, input, textarea").keypress(function (e) {
            if (e.which == 13 || e.key == "Enter" || e.keyCode == 13) {
                $(".chat_area").append("<p>" + $(".chat_message > textarea").val() + "</p>");
                $(".chat_message > textarea").val("");
            }
        });
    });
</script>
}

<div style="border: solid 2px blue; height: 100%;">
        <div class="chatbox" id="chat_window" title="WishLu Chat">
            <div class="header" title="WishLu Chat" >
                <p>WishLu Chat</p>
                <a href="#" class="close_chatbox" title="close chat window">X</a>
                <a href="#" class="minimize_chatbox" title="minimize chat window">_</a> 
            </div>
            <div class="chat_area">

            </div>
            <div class="chat_info" >
                <p></p>
            </div>
            <div class="chat_message" title="Type your message here">
                <textarea></textarea>
            </div>
        </div>
</div>