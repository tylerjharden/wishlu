@model Squid.Users.User
@using Disco.Common
@{
    Layout = "~/Views/Shared/Templates/MainLayout.cshtml";    
}

@section title {
    <span id="headerlink"><a href="/friends" style="color: #DED9D3;">my friends</a></span>
    <span class="fa fa-angle-right"></span>&nbsp;
    <span id="headerlink"><a href="/u/@Model.Id" style="color: #DED9D3;">@(Model.FirstName + " " + Model.LastName[0] + ".")</a></span>
    <span class="fa fa-angle-right"></span>&nbsp;
    <span>wishlus</span>       
}

@section styles {

}

@section scripts {    
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $.get("/get/otherwishlus/@Model.Id", null, function (result) {
            $("#wishlus_container").html(result);                                                           
        });                        
    });
</script>
}

<div id="wishlus_container" class="center">
    <i class="fa fa-spin fa-spinner fa-5x" style="margin-top: 20px; color:gray;"></i>
</div>