@model List<Squid.Shops.ProductNode>
@foreach (var item in Model)
{
    <tr>
        <td>
            <div style="margin: 0 auto; background-size: contain; background-repeat: no-repeat; background-position: center; background-color: transparent; background-image: url('@item.Image'); width: 100px; height: 100px; text-align: center;">&nbsp;</div>
            @*<img src="@item.Image" />*@
        </td>
        <td>@item.Price</td>
        <td>@HttpUtility.HtmlDecode(item.Name)</td>
        <td>@HttpUtility.HtmlDecode(item.Description)</td>
        <td>@item.Store</td>
        <td><a href="@item.Url" target="_blank">Link</a></td>
        <td>@item.UPC</td>
    </tr>
}