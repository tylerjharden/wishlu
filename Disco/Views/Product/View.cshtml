<script type='text/javascript'>
	function addToCart(cart_id) {
		$('.add-to-cart-container').hide();
		$('.tt-side').show().addClass('animated bounceInRight');
		$('.tt-side').data("cartid", cart_id);
		showCart();
	}

	function showCart() {
		$('.tt-side').removeClass('bounceInRight').addClass('bounceOutRight');

		// product urls must be escaped and separated by ','
		//var productUrl = '@WebUtility.UrlEncode(Offers[0].Url)';
		//var productUrl = encodeURIComponent('http://www.nastygal.com/clothes-dresses/reverse-havana-lace-dress--black');
		//var productUrl = encodeURIComponent('http://www.adorama.com/HOGMP467.html');
		//var iframeSrc = 'http://www.wishlu.com/home/twotap?product=' + productUrl;
		//var iframeSrc = 'https://checkout.twotap.com/?public_token=147b1eed7550448a6d435c98975322&unique_token=123&confirm_url=http://www.wishlu.com/home/twotap_confirm&products=' + productUrl + '&affiliate_links=' + encodeURIComponent('@Offers[0].Url');

		var iframeSrc = 'http://www.wishlu.com/purchase/cart?cart_id=' + $('.tt-side').data("cartid");

		$('#ttIframe').attr('src', iframeSrc);

		$('.tt-iframe').show().removeClass("slideOutRight").addClass('animated slideInRight');
		$('.tt-overlayer').fadeIn();
	}

	function closeCart() {
		$('.tt-iframe').removeClass('slideInRight').addClass('slideOutRight');
		$('.tt-overlayer').fadeOut();

		$('.tt-side').removeClass('bounceOutRight').addClass('bounceInRight');
	}
</script>
