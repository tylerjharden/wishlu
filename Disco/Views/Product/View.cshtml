@using Disco.Common
@model dynamic
@{
	Layout = "~/Views/Shared/Templates/MainLayout.cshtml";
    
	Milkshake.Product p = Model.Product;
	//TwoTap.API.Models.PurchaseEstimatesResponse estimates = Model.Estimates;

	List<Milkshake.Offer> Offers = p.Offers;//p.GetOffers();
}

@section page {
	@p.Name
}

@section title {
	@if (Offers.Count == 1)
	{
		<span><a href="/store" style="color: #DED9D3; text-decoration: none;">stores</a></span>
		<span class="fa fa-angle-right"></span>
		<span id="headerlink"><a href="@Url.Action("view", "store", new { @id = Offers[0].StoreId })" style="color: #DED9D3; text-decoration: none;">@Offers[0].Store</a></span>
